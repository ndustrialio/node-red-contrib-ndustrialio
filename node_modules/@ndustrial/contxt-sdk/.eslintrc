{
  "env": {
    "browser": true,
    "es6": true,
    "mocha": true,
    "node": true
  },
  "extends": ["ndustrial", "prettier"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "globals": {
    "expect": true,
    "faker": true,
    "fixture": true,
    "sinon": true
  },
  "plugins": [],
  "rules": {
    "no-unused-expressions": "off"
  }
}
